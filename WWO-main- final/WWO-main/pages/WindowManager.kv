# main.kv

ScreenManager:
    LoginScreen:
    RegisterScreen:
    role1Screen:
    role2Screen:
    role3Screen:
    role4Screen:

<LoginScreen>:
    name: 'login_screen'

    MDCard:
        size_hint: None, None
        size: 800, 800
        pos_hint: {"center_x": 0.5, "center_y": 0.4}  # Adjusted pos_hint
        md_bg_color: 0, 0, 0, 0
        padding: 50
        spacing: 50
        orientation: 'vertical'

        canvas:
            Color:
                rgba: 0.55, 0.87, 0.91, 1
            Line:
                rectangle: self.x, self.y, self.width, self.height
                width: 2

        Image:
            source: 'images/logo.png'
            size_hint_y: None
            height: 300
            width: 300
            halign: 'center'

        MDLabel:
            text: "Login to WWO dashboard"
            font_size: 50
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 75

        MDTextField:
            id: user
            hint_text: "username"
            icon_right: "account"
            size_hint_x: None
            width: 500
            font_size: 30
            pos_hint: {"center_x": 0.5}

        MDTextField:
            id: password
            hint_text: "password"
            icon_right: "eye-off"
            size_hint_x: None
            width: 500
            font_size: 30
            pos_hint: {"center_x": 0.5}
            password: True

        MDRoundFlatButton:
            text: "LOG IN"
            font_size: 30
            line_width: 2
            pos_hint: {"center_x": 0.5}
            on_press: root.login()

        MDFillRoundFlatIconButton:
            id: register_label
            text: "[color=#3498db]Don't have an account?[/color] [color=#2ecc71]Register[/color]"
            font_size: 30
            markup: True
            pos_hint: {"center_x": 0.5, "center_y": 0.2}
            md_bg_color: 0, 0, 0, 0
            on_press:
                root.navigate_to_register()

        MDLabel:
            id: error_label_login
            text: ""
            theme_text_color: "Error"
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]

        Widget:
            size_hint_y: None
            height: 20

